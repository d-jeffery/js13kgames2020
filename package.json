{
  "name": "emoji_js13k",
  "version": "1.0.0",
  "description": "js13kgames game jam server",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/**/*.jsx --fix",
    "bundle": "browserify -t babelify -t [ browserify-css --output public/bundle.css ] --debug src/index.jsx -o public/bundle.js",
    "deploy": "browserify -t babelify -t [ browserify-css --minify=true --output public/bundle.css ] -t uglifyify src/index.jsx -o public/bundle.js ",
    "start": "npm run deploy && node index.js",
    "start:dev": "npm run bundle && nodemon",
    "test": "mocha test"
  },
  "browserify-css": {
    "autoInject": true,
    "minify": true,
    "rootDir": "src/style/"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "keywords": [
    "js13kgames",
    "server",
    "preact",
    "browserify"
  ],
  "engines": {
    "node": "14.5.0"
  },
  "nodemonConfig": {
    "ext": "jsx,js,mjs,ts,json,css,scss,sass,html,pug"
  },
  "devDependencies": {
    "archiver": "^4.0.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-es2015-arrow-functions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^8.0.0",
    "body-parser": "^1.19.0",
    "browserify": "^16.5.2",
    "browserify-css": "^0.15.0",
    "chalk": "^4.1.0",
    "css-loader": "^3.5.3",
    "eslint": "^7.8.1",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-react": "^7.20.6",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "mocha": "^8.1.3",
    "mysql2": "^2.1.0",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "preact-render-to-string": "^5.1.2",
    "sequelize": "^6.3.5",
    "socket.io": "^2.3.0",
    "sqlite3": "^5.0.0",
    "uglifyify": "^4.0.5"
  },
  "dependencies": {
    "nodemon": "^2.0.4",
    "preact": "^10.4.8"
  }
}
